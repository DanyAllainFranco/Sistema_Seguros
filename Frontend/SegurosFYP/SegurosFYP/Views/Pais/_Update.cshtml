@model SegurosFYP.Models.PaisesViewModel

        @{
        ViewData["Title"] = "_Update";
        ViewData["ModelName"] = "PaisesViewModel".Replace("ViewModel","");
        }
        
<form asp-action="Update">
    <div class="d-flex justify-content-center flex-wrap">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-sm-5">
            <input asp-for="Paise_Id" id="Paise_Id" type="hidden" class="form-control" />
            <label asp-for="Paise_Descripcion" class="control-label"></label>
            <input asp-for="Paise_Descripcion" id="Paise_Descripcion" class="form-control" />
            <span asp-validation-for="Paise_Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-5">
            <label asp-for="Paise_Nacionalidad" class="control-label"></label>
            <input asp-for="Paise_Nacionalidad" id="Paise_Nacionalidad" class="form-control" />
            <span asp-validation-for="Paise_Nacionalidad" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
            
                @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }




