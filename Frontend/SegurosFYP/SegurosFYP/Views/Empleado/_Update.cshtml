@model SegurosFYP.Models.EmpleadoViewModel

        @{
        ViewData["Title"] = "_Update";
        ViewData["ModelName"] = "EmpleadoViewModel".Replace("ViewModel","");
        }
        
                 <form asp-action="Update">
            <div class="d-flex justify-content-center flex-wrap">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-sm-5">
                <label asp-for="Cargo_Id" class="control-label"></label>
                <input asp-for="Emple_Id" class="form-control" id="Emple_Id" type="hidden"/>
                <input asp-for="Cargo_Id" class="form-control" />
                <span asp-validation-for="Cargo_Id" class="text-danger"></span>
            </div>
          </div>       
        </form>       
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>            
            </div>

                @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }




