@model IEnumerable<SegurosFYP.Models.CargosViewModel>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-6">
            <div>
                <div class="d-flex justify-content-around">
                    <h1>Detalles</h1>
                </div>
                <hr />
                <form asp-controller="Cargo" method="post" asp-action="Details">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Cargo_Id)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => item.Cargo_Id)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Cargo_Descripcion)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => item.Cargo_Descripcion)
                        </dd>
                    </dl>
                </form>
            </div>
        </div>
        <div class="col-md-6">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Accion</th>
                        <th>Usuario</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Creacion</td>
                        <td>@Html.DisplayFor(modelItem => item.UsuarioCreacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cargo_FechaCreacion)</td>
                    </tr>
                    <tr>
                        <td>Modificacion</td>
                        <td>@Html.DisplayFor(modelItem => item.UsuarioModificacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cargo_FechaModificacion)</td>
                    </tr>
                </tbody>
            </table>
            <div style="gap: 5px; margin-top: 10px">
                <a asp-route-id="@item.Cargo_Id" type="button" class="btn btn-danger" data-toggle="modal" data-target="#ModalEliminar" onclick="ObtenerID('@item.Cargo_Id')"><i class="bi bi-trash"></i>Eliminar</a>
                <a asp-action="Index" class="btn btn-secondary">Regresar</a>
            </div>
        </div>
    </div>
}

<div class="modal fade" id="ModalEliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_Delete", new SegurosFYP.Models.CargosViewModel())
            </div>
        </div>
    </div>
</div>

